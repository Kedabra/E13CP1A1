
<div class="container">
  <div class="card">
    <div class="card-body">
    <%= form_with model: @sale, local:true do |f|%>
     <div class="form-group">
      <%= label_tag(:detail, "Detalle") %>
      <%= f.text_area :detail, class:"form-control"%>
      </div>
      <div class="form-group">
      <%= label_tag(:category, "Categoria") %>
      <%= f.number_field :category, class:"form-control" %>
      </div>
      <div class="form-group">
      <%= label_tag(:value, "Valor") %>
      <%= f.number_field :value, class:"form-control"%>
      </div>
      <div class="form-group">
      <%= label_tag(:discount, "Descuento") %>
      <%= f.number_field :discount, class:"form-control"%>
      </div>
      <div class="form-check">
      <%= label_tag(:tax, "Tax") %>
      <%= f.check_box :tax, class: "form-check-label" %>
      </div>
      <%= f.submit "Enviar"%>
    <% end %>
    </div>
    </div>
</div>
