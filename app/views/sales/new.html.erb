
<div class="container">
  <div class="card">
    <div class="card-body">
    <%= form_with model: @sales, local:true do |f|%>
      <%= label_tag(:detail, "Detalle") %>
      <%= f.text_area :detail%>
      <%= label_tag(:category, "Categoria") %>
      <%= f.number_field :category%>
      <%= label_tag(:value, "Valor") %>
      <%= f.number_field :value%>
      <%= label_tag(:discount, "Descuento") %>
      <%= f.number_field :discount%>
      <%= label_tag(:tax, "Tax") %>
      <%= f.check_box(:tax) %>
      <%= f.submit "Enviar"%>
    <% end %>
    </div>
    </div>
</div>
